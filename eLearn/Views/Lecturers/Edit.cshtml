@model Lecturer
@{
    var Lecturer = (Lecturer)ViewData["Lecturer"];
    Layout = "_LayoutDesign";
}
<form asp-action="Edit" method="post" class="form-horizontal" style="margin-top:50px !important ;margin-bottom:130px !important">
    <div class="form-group">
        <div>
            <input type="hidden" asp-for="Id" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <div>
            <input asp-for="FirstName" value="@Lecturer.FirstName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <div>
            <input asp-for="LastName" value="@Lecturer.LastName" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <div>
            <input asp-for="Email" value="@Lecturer.Email" />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
    </div>
</form>