
@{
    var Lecturers = (List<Lecturer>)ViewData["Lecturers"];
    Layout = "_LayoutDesign";

}
<div  style="margin-top:50px !important ;margin-bottom:30px !important;padding-bottom:20px; text-align:center;background-color:#343a40;color:white">
    <h1 >Current Lecturers</h1>
    <a class="btn btn-primary" asp-area="" asp-controller="Lecturers" asp-action="Create">Add Lecturer</a>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <td>
                Id
            </td>
            <td>
                First Name
            </td>
            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>

        </tr>
    <tbody>
        @foreach (var Lecturer in Lecturers)
        {
            <tr>
                <td>@Lecturer.Id</td>
                <td>@Lecturer.FirstName</td>
                <td><a class="btn btn-primary"  href="/Lecturers/Details/@Lecturer.Id"> SHOW </a></td>
                <td><a class="btn btn-primary" asp-controller="Lecturers" asp-action="Edit" asp-route-id="@Lecturer.Id">Edit</a></td>
                <td>
                    <form method="post" asp-controller="Lecturers" asp-action="Delete" asp-route-id="@Lecturer.Id">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>