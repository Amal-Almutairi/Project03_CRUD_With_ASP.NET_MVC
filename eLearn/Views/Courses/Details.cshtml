@{
    var Course = (Course)ViewData["Details"];
    Layout = "_LayoutDesign";
}

<div class="card mb-12" style="margin-bottom:20px; margin-top:20px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Course.CourseImage" alt="@Course.CourseImage" width="410px" height="440px">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title" style="margin-top:7em">@Course.CourseName</h5>
                <p class="card-text">@Course.CourseDescription</p>
                <p class="card-text"><small class="text-muted">@Course.CourseLevel </small></p>
                <a href="/Courses" class="btn btn-primary btn-color">Back</a>
            </div>
        </div>
    </div>
</div>
